%% This is the block environment that gives transparant blocks
%%
\newenvironment{transbox}[1][ta3aluminium]{
\begin{tikzpicture}
\node[text width=1\textwidth, fill opacity=0.85, text opacity=1,
fill=#1, rounded corners, text=black, draw=ta7skyblue] \bgroup%
}{\egroup;\end{tikzpicture}}

