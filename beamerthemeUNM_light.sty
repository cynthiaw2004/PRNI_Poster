%%
%% Block style
%%
\newlength{\blocktitleheight}\settoheight{\blocktitleheight}{ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890}
\setlength{\blocktitleheight}{7\blocktitleheight}
\setbeamertemplate{block begin}{
  \begin{transbox} % Make background transparent
    \vspace{3mm}
    \begin{center}\begin{tikzpicture}
      \node[text width=0.97\textwidth,inner sep=3mm,fill=ta3aluminium,draw=ta7skyblue,text=ta2skyblue,rounded corners,minimum height=\blocktitleheight] {\usebeamerfont*{block title}\insertblocktitle};
    \end{tikzpicture}\end{center}
    \vspace{3mm}
    \begin{beamercolorbox}[leftskip=0.015\textwidth]{block body}
    \usebeamerfont*{block body}
    \usebeamercolor*{block body}
}
    % Content goes here
\setbeamertemplate{block end}{
    \end{beamercolorbox}
  \end{transbox}
  \vspace{-1em}
}

